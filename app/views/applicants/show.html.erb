<% flash[:notice] %>
<div class="contextual">
  <%= link_to 'Back', applicants_url, :class => 'icon icon-history' %>
</div>

<h2><%=h Apptracker.find(params[:apptracker_id]).title %>: <em><%=h "#{@applicant.last_name}, #{@applicant.first_name} "%></em></h2>

<%= render :partial => "shared/tabs" %>

<h2>Applicant Information</h2>
<table>
  <tr>
    <td>
<b>General Information</b>
<p>
Name: <%=h "#{@applicant.last_name}, #{@applicant.first_name}"%><br /> 
User name: <%=h @applicant.user_name %><br /> 
Email: <%=h @applicant.email %><br /> 
Mobile phone: <%=h @applicant.mobile_phone %> <br /> 
Date of birth: <%=h @applicant.dob %> <br /> 
Gender: <%=h @applicant.gender %> <br /> 
</p>
<br />
</td>
<td style="padding-left:20px;">
<b>College Information</b>
<p>
Graduation month: <%=h @applicant.grad_month %> year: <%=h @applicant.grad_year %> <br /> 
Highest degree level: <%=h @applicant.highest_degree_level %> <br /> 
School name: <%=h @applicant.school_name %> <br /> 
School town/city: <%=h @applicant.school_town_city %> <br /> 
School state/province: <%=h @applicant.school_state_province %> <br /> 
School country: <%=h @applicant.school_country %><br /> 
</p>
<br />
</td>
</tr>
<tr>
<td>
<b>Home Address (if applicable)</b>
<p>
Home street address 1: <%=h @applicant.home_street_1 %> <br /> 
Home street address 2: <%=h @applicant.home_street_2 %> <br /> 
Home town/city: <%=h @applicant.home_town_city %> <br /> 
Home state/province: <%=h @applicant.home_state_province %> <br /> 
Home postal code: <%=h @applicant.home_postal_code %> <br /> 
Home country: <%=h @applicant.home_country %><br /> 
Home phone: <%=h @applicant.home_phone %><br /> 
</p>
</td>
<td style="padding-left:20px;">
<b>Dorm/Apartment Address</b>
<p>
Dorm street address 1: <%=h @applicant.dorm_street_1 %><br /> 
Dorm street address 2: <%=h @applicant.dorm_street_2 %> <br /> 
Dorm town/city: <%=h @applicant.dorm_town_city %> <br /> 
Dorm state/province: <%=h @applicant.dorm_state_province %> <br /> 
Dorm postal code: <%=h @applicant.dorm_postal_code %> <br /> 
Dorm country: <%=h @applicant.dorm_country %><br /> 
Dorm phone: <%=h @applicant.dorm_phone %><br /> 
</p>
</td>
</tr>
</table>
<br /><br />

