<% flash[:notice] %>
<h2><%=h session[:apptracker_title] %>: Applicants</h2>

<% # Provide a tab set for the admin role %>
<% if(User.current.admin?)%>
  <%= render :partial => "shared/tabs" %>
<% end %>

<table class="list" style="width:90%">
<thead>
  <tr>
    <th style="width:50%; text-align:left;">Name</th>
    <th style="width:40%; text-align:left;">User Name</th>
    <th style="width:5%; text-align:left;"></th>
    <th style="width:5%; text-align:left;"></th>
  </tr>
</thead>
<tbody>
  <% @applicants.each do |applicant| %>
    <tr>
      <td style="width:50%"><%= link_to "#{applicant.first_name} #{applicant.last_name}", applicant_url(applicant.id) %></a></td>
      <td style="width:40%"><%=h applicant.user_name%></a></td>
      <td style="width:5%"><%= link_to 'Edit', edit_applicant_url(applicant.id) %></td>
      <td style="width:5%"><%= link_to 'Delete', applicant_url(:id => applicant.id), :confirm => "Are you sure you want to delete #{applicant.first_name} #{applicant.last_name}\'s record?", :method => :delete %></td>
    </tr>
  <% end %>
</tbody>
</table>
<br /><br />
<%= link_to 'New Applicant', new_applicant_url %>
