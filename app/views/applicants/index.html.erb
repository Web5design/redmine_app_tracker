<% flash[:notice] %>
<div class="contextual">
  <% if (User.current.admin?) %>
    <%= link_to 'New Applicant', new_applicant_url(:apptracker_id => @apptracker.id), :class => 'icon icon-add' %> |
  <% end %>
  <%= link_to 'Return to Apptracker List', apptrackers_url(:project_identifier => @apptracker.project.identifier), :class => 'icon icon-history' %>
</div>

<h2><%=h Apptracker.find(params[:apptracker_id]).title %>: Applicants</h2>

<% # Provide a tab set for the admin role %>
<% if(User.current.admin?)%>
  <%= render :partial => 'shared/tabs' %>
  <%= render :partial => 'applicant_tables' %>
<% end %>


