	<% form_for(@job_application_referral, :html => {:multipart => true}) do |jar| %>
	  <%= jar.error_messages %>
	  <%= jar.hidden_field(:job_application_id, :value => @job_application.id ) %>
	  		<p>
	  		<%= jar.label(:first_name, "First Name") %><span class="required">*</span><br />
	  		<%= jar.text_field(:first_name) %>
	  		</p>
			<p>
			<%= jar.label(:last_name, "Last Name") %><span class="required">*</span><br />
	    	<%= jar.text_field(:last_name) %>
			</p>
			<p>
		    <%= jar.label(:title, "Title") %><span class="required">*</span><br />
		    <%= jar.text_field(:title) %>
		    </p>
			<p>
		    <%= jar.label(:affiliation, "Affiliation") %><span class="required">*</span><br />
		    <%= jar.text_field(:affiliation) %>
	  		</p>
			<p>
		    <%= jar.label(:relationship, "Relationship") %><span class="required">*</span><br />
		    <%= jar.text_field(:relationship) %>
	  		</p>
			<p>
		    <%= jar.label(:email, "Email") %><span class="required">*</span><br />
		    <%= jar.text_field(:email) %>
	  		</p>
		    <p>
		    <%= jar.label(:phone, "Phone") %><br />
		    <%= jar.text_field(:phone) %>
		    </p>

	  <p>
	    <%= jar.submit('Submit') %>
	  </p>
	<% end %>