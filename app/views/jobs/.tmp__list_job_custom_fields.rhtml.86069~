<table>
<% if !job.job_custom_fields.empty? %>
        <% job.custom_field_values.each do |value| %>
            <% if job.job_custom_fields.include? value.custom_field %>
                <p>
                    <% @html = (custom_field_tag_with_label :job, value).split '><' %>
                    <tr>
                          <td>
                            <%= link_to image_tag("/images/delete.png", :border=>0), :controller => "jobs", :action => "remove_custom_field", :id => job, :existing_custom_field => value.custom_field.id %>
                            <%= @html[0] + '>' %>
                          </td>
                          <td><%= '<' + @html[1] %></td>
                    </tr>
                </p>
            <% end %>
        <% end %>
    <% end %>
</table>	