<table class="list" style="width:90%">
<thead>
  <tr>
    <% if(User.current.admin?)%>
      <!-- Admin Role -->
      <th style="width:20%; text-align:left;">Name</th>
      <th style="width:20%; text-align:left;">Email</th>
      <th style="width:15%; text-align:left;">Phone</th>
      <th style="width:35%; text-align:left;"></th>
      <th style="width:5%; text-align:left;"></th>
      <th style="width:5%; text-align:left;"></th>
    <% elsif (User.current.logged?)%>
      <!-- Applicant Role -->
      <th style="width:20%; text-align:left;">Name</th>
      <th style="width:20%; text-align:left;">Email</th>
      <th style="width:15%; text-align:left;">Phone</th>
      <th style="width:35%; text-align:left;"></th>
      <th style="width:5%; text-align:left;"></th>
      <th style="width:5%; text-align:left;"></th>
    <% else %>
      <!-- Anonymous Role --><table class="list" style="width:90%">
    <% end %>    
  </tr>
</thead>
<tbody>
  <% @referrers.each do |referrer| %>
    <tr>
      <% if(User.current.admin?)%>
        <!-- Admin Role -->
        <td style="width:20%"><%= link_to "#{referrer.first_name} #{referrer.last_name}", referrer_url(:id => referrer.id) %></td>
        <td style="width:20%"><%=h referrer.email%></td>
        <td style="width:15%"><%=h referrer.phone%></td>
        <td style="width:35%"></td>
        <td style="width:5%"><%= link_to 'Edit', edit_referrer_url(:id => referrer.id) %></td>
        <td style="width:5%"><%= link_to 'Delete', referrer_url(:id => referrer.id), :confirm => "Are you sure you want to delete #{referrer.first_name} #{referrer.last_name}\'s record?", :method => :delete %></td>
      <% elsif (User.current.logged?)%>
        <!-- Applicant Role -->
        <td style="width:20%"><%= link_to "#{referrer.first_name} #{referrer.last_name}", referrer_url(:id => referrer.id) %></td>
        <td style="width:20%"><%=h referrer.email%></td>
        <td style="width:15%"><%=h referrer.phone%></td>
        <td style="width:35%"></td>
        <td style="width:5%"><%= link_to 'Edit', edit_referrer_url(referrer.id) %></td>
        <td style="width:5%"><%= link_to 'Delete', referrer_url(:id => referrer.id), :confirm => "Are you sure you want to delete #{referrer.first_name} #{referrer.last_name}\'s record?", :method => :delete %></td>
      <% else %>
        <!-- Anonymous Role -->

      <% end %> 
    </tr>
  <% end %>
</tbody>
</table>

